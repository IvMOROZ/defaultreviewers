<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="defaultreviewers"/>
    
    <!-- add our web resources -->
    <web-resource key="defaultreviewers-resources" name="defaultreviewers Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="defaultreviewers.css" location="/css/defaultreviewers.css"/>
        <resource type="download" name="defaultreviewers.js" location="/js/defaultreviewers.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>defaultreviewers</context>
    </web-resource>

    <component-import key="builderFactory" interface="com.atlassian.bitbucket.scm.git.command.GitCommandBuilderFactory"/>

    <repository-hook name="Default Reviewers Extended" i18n-name-key="defaultreviewers-hook.name" key="defaultreviewers-hook" class="com.parallels.bitbucket.plugins.defaultreviewers.DefaultReviewersHook">
        <description key="defaultreviewers-hook.description">Add default pull request reviewers to paths in repository</description>
        <icon>images/pluginLogo.png</icon>
    </repository-hook>

    <component key="pullRequestEventListener" class="com.parallels.bitbucket.plugins.defaultreviewers.PullRequestEventListener"/>

</atlassian-plugin>
